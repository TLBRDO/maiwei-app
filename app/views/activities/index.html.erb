<div class="container my-3 mt-4">
  <h1 class="text-center">Que souhaitez-vous découvrir ?</h1>
  <%# SEARCH BAR %>
  <%= form_with url: activities_path, method: :get, class: "d-flex justify-content-center mt-3 mb-4" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Renseignez la ville à visiter et découvrez les activités"
    %>
    <%= submit_tag "Recherchez", class: "btn-destination" %>
  <% end %>
  <%# FIN SEARCH BAR %>
  <%# Modal%>
  <div class="container my-3 mt-4">
    <div class="category-selected my-4">
      <div class=category-name-selected>
        <h2>Musées</h2>
  <div class="cards my-4">
    <% @activities.each do |activity| %>
      <div class="card_activity" data-bs-toggle="modal" data-bs-target=<%= "#activity-#{activity.id}" %> >
        <div class="card_name">
          <%= cl_image_tag(activity.photos.key, height: 300, width: 400) %>
          <h5><%= truncate(activity.name, length: 40, separator: ' ', omission: '...') %></h5>
        </div>
        <div class="activity_description">
          <div>
          <p class="rating"><i class="fa-solid fa-star"></i><%= activity.average_rating%>/5</p>
          <p class="duration"><i class="fa-solid fa-stopwatch"></i><%= activity.duration%>h</p>
          <p class="price"><i class="fa-solid fa-coins"></i> <%= activity.price_per_visitor %>€</p>
          </div>
          <p class="address"><i class="fa-solid fa-location-pin"></i><%= truncate(activity.address, length: 80, separator: ' ', omission: '...') %></p>
          <p class="description"><%= activity.description %></p>
          <%# <p><%= truncate(activity.description, length: 110, separator: ' ', omission: '...') %>
        </div>
      </div>
      <div class="cards my-4">
        <% @activities.tagged_with("Musées").each do |activity| %>
          <%= render "activity-selected-category", activity: activity %>
        <% end %>
      </div>
    </div>
    <div class="category-selected my-4">
      <div class="category-name-selected">
        <h2>Monuments et points d'intérêt</h2>
      </div>
      <div class="cards my-4">
        <% @activities.tagged_with("Monuments et points d'intérêt").each do |activity| %>
        <%= render "activity-selected-category", activity: activity %>
        <% end %>
      </div>
    </div>
    <div class="category-selected my-4">
      <div class="category-name-selected">
        <h2>Sites historiques</h2>
      </div>
      <div class="cards my-4">
        <% @activities.tagged_with("Sites historiques").each do |activity| %>
        <%= render "activity-selected-category", activity: activity %>
        <% end %>
      </div>
    </div>
    <div class="category-selected my-4">
      <div class="category-name-selected">
        <h2>Marchés</h2>
      </div>
      <div class="cards my-4">
        <% @activities.tagged_with("Marchés").each do |activity| %>
        <%= render "activity-selected-category", activity: activity %>
        <% end %>
      </div>
    </div>
    <div class="category-selected my-4">
      <div class="category-name-selected">
        <h2>Théâtres</h2>
      </div>
      <div class="cards my-4">
        <% @activities.tagged_with("Théâtres").each do |activity| %>
          <%= render "activity-selected-category", activity: activity %>
        <% end %>
      </div>
    </div>
  </div>
</div>
